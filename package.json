{
  "name": "root",
  "description": "Monorepo for my 11ty plugins",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "homepage": "https://github.com/jackdbd/undici",
  "private": true,
  "type": "module",
  "keywords": [
    "11ty",
    "monorepo",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/undici"
  },
  "bugs": {
    "url": "https://github.com/jackdbd/undici/issues?q=is%3Aissue+label%3Abug"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "run-s 'build:libs' 'build:docs' 'build:site' --print-label",
    "build:docs": "run-s 'build:docs:packages' 'build:docs:index' --print-label",
    "build:docs:packages": "npm run build:docs --workspaces --if-present",
    "build:docs:index": "./scripts/docs-index.mjs",
    "build:eev": "npm run build:ts -w packages/eleventy-plugin-ensure-env-vars",
    "build:libs:ts": "tsc --build --verbose",
    "build:libs": "run-s 'build:libs:ts' 'build:libs:js' --print-label",
    "build:libs:js": "npm run build -w packages/eleventy-plugin-content-security-policy && npm run build -w packages/eleventy-plugin-plausible",
    "build:libs:show-config": "tsc --showConfig -p packages/eleventy-plugin-text-to-speech",
    "build:libs:watch": "tsc --build --watch",
    "build:site": "npm run build -w packages/demo-site",
    "build:site:watch": "npm run build:watch -w packages/demo-site",
    "clean": "npm run clean --workspaces --if-present",
    "dev": "run-p 'build:libs:watch' 'build:site:watch' 'serve:site' --print-label",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "ncu:dev": "ncu --doctor --dep 'dev' --upgrade",
    "nuke": "npm run clean && rm -rf node_modules package-lock.json",
    "release:dry": "multi-semantic-release --no-ci --dry-run --debug --ignore-private --ignore-packages=packages/demo-site",
    "serve:site": "npm run serve -w packages/demo-site",
    "size": "npm run size --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "test:tts": "npm run test -w packages/eleventy-plugin-text-to-speech"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run precommit --workspaces --if-present",
    "pre-push": "npx commitlint --config ./config/commitlint.cjs --to HEAD"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@jackdbd/checks": "^2.0.0",
    "@microsoft/api-documenter": "^7.23.16",
    "@microsoft/api-extractor": "^7.39.1",
    "@panoply/11ty": "^0.2.0",
    "@qiwi/multi-semantic-release": "^7.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/html-to-text": "^9.0.4",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "debug": "^4.3.4",
    "doctoc": "^2.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "joi": "^17.11.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "npm-check-updates": "^16.14.12",
    "npm-run-all": "^4.1.5",
    "pkg-size": "^2.4.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "simple-git-hooks": "^2.9.0",
    "tsm": "^2.3.0",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3",
    "zx": "^7.2.3"
  }
}
