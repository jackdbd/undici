{% block pagecontent %}

<p>Items from the <code>all</code> collection. The items that have <code>eleventyExcludeFromCollections: true</code> in the frontmatter do <strong>not</strong> show up.</p>
<ul>
{%- for item in collections.all -%}
  <li>
    <a href="{{ item.url | url }}">
      {% if item.data.title %}
        {{ item.data.title }}
      {% else %}
        Untitled post
      {% endif %}
    </a>
  </li>
{%- endfor -%}
</ul>

<p>Items from the <code>post</code> collection (reversed).</p>
<ul>
{%- for item in collections.post | reverse -%}
  <li>
    <a href="{{ item.url | url }}">
      {% if item.data.title %}
        {{ item.data.title }}
      {% else %}
        Untitled post
      {% endif %}
    </a>
  </li>
{%- endfor -%}
</ul>

